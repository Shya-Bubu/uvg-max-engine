# UVG MAX Environment Configuration
# Copy this file to .env and fill in your API keys

# =============================================================================
# STOCK MEDIA API KEYS
# =============================================================================
PEXELS_KEY=your_pexels_api_key
PIXABAY_KEY=your_pixabay_api_key

# =============================================================================
# AI MODEL API KEYS
# =============================================================================
GEMINI_API_KEY=your_gemini_api_key

# =============================================================================
# TTS API KEYS (Choose one provider)
# =============================================================================
AZURE_TTS_KEY=your_azure_tts_key
AZURE_TTS_REGION=eastus

# Gemini TTS (when available)
# UVG_GEMINI_TTS_KEY=your_gemini_tts_key

# =============================================================================
# MODEL SELECTION
# =============================================================================
UVG_GEMINI_SCRIPT_MODEL=gemini-2.5-flash
UVG_GEMINI_CREATIVE_MODEL=gemini-2.5-flash-live
UVG_GEMINI_TTS_MODEL=gemini-2.5-flash-tts

# =============================================================================
# RUNTIME OPTIONS
# =============================================================================
UVG_TTS_PROVIDER=mock  # mock, gemini, azure
UVG_MOCK_MODE=true     # true for testing, false for production
UVG_DEBUG_SEED=42      # Seed for deterministic mock output
MAX_DOWNLOAD_WORKERS=6

# =============================================================================
# TESTING
# =============================================================================
UVG_RUN_INTEGRATION=false  # Set to true to run integration testsAPI_KEY=your_coverr_key
